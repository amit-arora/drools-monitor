<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
  <union-subclass name="com.lucazamador.drools.monitoring.model.kbase.KnowledgeBaseMetric" table="kbase_metric" extends="com.lucazamador.drools.monitoring.model.AbstractMetric">
    <property name="knowledgeBaseId" type="string">
      <column name="knowledgeBaseId" length="100"/>
    </property>
    <property name="agentId" type="string">
      <column name="agentId" length="100"/>
    </property>
    <property name="sessionCount" type="java.lang.Long" />
    <property name="packages" type="string">
      <column name="packages" length="100"/>
    </property>
  </union-subclass>
</hibernate-mapping>
